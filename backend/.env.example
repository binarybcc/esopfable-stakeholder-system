# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/case_management
DB_HOST=localhost
DB_PORT=5432
DB_NAME=case_management
DB_USER=username
DB_PASSWORD=password

# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=your-api-identifier
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-min-32-chars
REFRESH_TOKEN_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Redis Configuration (for sessions and job queue)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# File Storage Configuration
UPLOAD_DIR=./uploads
ENCRYPTION_KEY=your-file-encryption-key-32-chars
FILE_SIZE_LIMIT=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SLOW_DOWN_DELAY_MS=1000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
SECURE_COOKIES=false
SESSION_SECRET=your-session-secret-min-32-chars

# Monitoring
ENABLE_AUDIT_LOGS=true
ENABLE_PERFORMANCE_MONITORING=true
HEALTH_CHECK_INTERVAL=30000

# ClamAV (Virus Scanning)
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
ENABLE_VIRUS_SCANNING=true